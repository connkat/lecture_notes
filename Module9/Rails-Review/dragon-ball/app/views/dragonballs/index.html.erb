<p id="notice"><%= notice %></p>

<h1>Dragonballs</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dragonballs.each do |dragonball| %>
      <tr>
        <td><%= link_to 'Show', dragonball %></td>
        <td><%= link_to 'Edit', edit_dragonball_path(dragonball) %></td>
        <td><%= link_to 'Destroy', dragonball, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dragonball', new_dragonball_path %>
